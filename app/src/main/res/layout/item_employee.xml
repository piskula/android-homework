<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_item_employee_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/pic_icon_description"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/txt_item_employee_lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_item_employee_icon"
                android:paddingStart="@dimen/card_titles_padding"
                android:paddingEnd="@dimen/card_titles_padding"
                android:paddingTop="@dimen/card_titles_padding"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_item_employee_firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_item_employee_lastName"
                android:paddingStart="@dimen/card_titles_padding"
                android:paddingEnd="@dimen/card_titles_padding"
                android:paddingBottom="@dimen/card_titles_padding"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_item_employee_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="16sp"
                android:paddingStart="@dimen/card_titles_padding"
                android:paddingEnd="@dimen/card_titles_padding"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>